rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Règles de sécurité définitives pour Cluster
    // Seuls les utilisateurs connectés (authentifiés via Google ou Email) peuvent lire et écrire les données.
    
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Exemple de règles plus strictes possibles plus tard :
    // match /members/{userId} {
    //   allow read: if request.auth != null;
    //   allow write: if request.auth.uid == userId;
    // }
  }
}
